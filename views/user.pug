extends layout

block content
 - i = 0;
  if data.pic0
    .ui.card.centered.link
      a.image(href=data.pic0)
        img(src=data.pic0)
  .ui.card.fluid
    .content
      a.header= data.firstname + " " + data.lastname
      .meta
        span.category= data.sexe + " de " + data.age + " ans."
        span.category.right.floated= data.orientation
      .description= data.bio
      .ui.labeled.icon.button.red.right.floated
        i.heart.icon
        p= pop
    if data.username != user
      if likes == 0
        a.ui.bottom.attached.button.primary(href="/like/" + data.username)
          i.add.icon
          span Like
      else
        a.ui.bottom.attached.button.teal(href="/like/" + data.username)
          i.add.icon
          span Dislike
  button.ui.button.red Signaler l'utilisateur
  button.ui.button.yellow Bloquer l'utilisateur
  br
  br
  br
  .ui.link.cards
    if data.pic1
      .card
        a.image(href=data.pic1)
          img(src=data.pic1)
    if data.pic2
      .card
        a.image(href=data.pic2)
          img(src=data.pic2)
    if data.pic3
      .card
        a.image(href=data.pic3)
          img(src=data.pic3)
    if data.pic4
      .card
        a.image(href=data.pic4)
          img(src=data.pic4)
